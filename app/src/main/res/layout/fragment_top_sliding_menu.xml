<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.TopSlidingMenuFragment">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/topSlidingMenuFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home.TopSlidingMenu">

        <LinearLayout
            android:id="@+id/viewParent"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/menubg"
            android:elevation="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/meditateicon" />

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/relaxicon" />

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/moodicon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">


                <ImageButton
                    android:id="@+id/btnChat"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/chaticon" />

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/blogicon" />

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/helpicon" />


            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnSlidingMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nextarrowbg"
            android:clickable="true"
            android:elevation="5dp"
            android:src="@drawable/ic_arrow_drop_up_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewParent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>