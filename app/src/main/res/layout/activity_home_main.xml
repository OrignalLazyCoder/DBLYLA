<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background="#F6F9F8"
    tools:context=".Home.HomeMainActivity">

    <LinearLayout
        android:id="@+id/viewParent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:elevation="50dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/menubg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/meditateicon"/>

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/relaxicon"/>

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/moodicon"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/chaticon"/>

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/blogicon"/>

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/helpicon"/>
            

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        android:src="@drawable/ic_swap_vertical_circle_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:background="@drawable/floatmenubg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/keyboardicon" />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/appicon" />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/micicon" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>